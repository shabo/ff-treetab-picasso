{
  "manifest_version": 2,
  "name": "Tree Tab Picasso",
  "description": "Paint your tab tree with bold colors and emoji. Picasso would approve, and your tabs might finally make sense.",
  "version": "0.1.2",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tree-tab-picasso@local",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "permissions": [
    "menus",
    "tabs",
    "storage"
  ],
  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  }
}
