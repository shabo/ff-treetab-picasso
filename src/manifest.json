{
  "manifest_version": 2,
  "name": "TST Color Tab Tree",
  "description": "Right-click any tab and color that tab + all descendants in Tree Style Tab's sidebar.",
  "version": "0.1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tst-color-tab-tree@local",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": ["menus", "tabs"],
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  }
}
